<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavegationViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-14dp"
        android:background="#0B0119"
        app:itemIconTint="#C480FF"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottommenu" />

    <ImageView
        android:id="@+id/gatoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gatohome_sin_gato"
        />

    <ImageView
        android:id="@+id/gatoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/gatoHome"
        app:srcCompat="@mipmap/gato_negro"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        app:srcCompat="@drawable/logo_app" />


    <ImageButton
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavegationViews"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/baseline_bar_chart_24"
        app:tint="#FFFFFF"
        android:background="@drawable/rounded_button_background"
        android:padding="15dp"/>


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavegationViews"
        android:layout_marginBottom="-121dp">


    </FrameLayout>

</RelativeLayout>